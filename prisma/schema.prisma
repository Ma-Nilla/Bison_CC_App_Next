// Prisma schema definition for Bison Car Care

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String?
  role      Role        @default(USER)
  planId    String?
  plan      Plan?       @relation(fields: [planId], references: [id])
  jobs      Job[]
  payments  Payment[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Plan {
  id          String   @id @default(cuid())
  name        String
  priceId     String   // Stripe/Telr/Tap price identifier
  interval    String
  amount      Int
  description String?
  users       User[]
}

model Payment {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  amount    Int
  currency  String
  status    PaymentStatus
  invoiceId String?
  createdAt DateTime    @default(now())
}

model Job {
  id         String      @id @default(cuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  status     JobStatus   @default(PENDING)
  description String?
  scheduledAt DateTime?
  photos     Photo[]
  signature  String?
  createdAt  DateTime    @default(now())
}

model Photo {
  id    String   @id @default(cuid())
  jobId String
  job   Job      @relation(fields: [jobId], references: [id])
  url   String   // Path or S3 URL
}

enum Role {
  USER
  ADMIN
}

enum JobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}