# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# NextAuth secret for session tokens
AUTH_SECRET=your-secret-here

# Stripe keys for subscription checkout
STRIPE_SECRET_KEY=sk_test_yourkey
STRIPE_WEBHOOK_SECRET=whsec_yourwebhooksecret

# Stripe price identifiers for each subscription tier
STRIPE_PRICE_BASIC=price_basic
STRIPE_PRICE_PREMIUM=price_premium
STRIPE_PRICE_EXECUTIVE=price_executive

# Base URL of your application (used by Stripe redirects)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# (Optional) Amazon Payment Services / Telr / Tap credentials
APS_API_KEY=
TELR_API_KEY=
TAP_API_KEY=